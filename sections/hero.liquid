{% comment %}
  Section: Hero Section
  Description: This section is used for the main page hero.
{% endcomment %}

{%- liquid
    # Variables
    assign section_id = section.id
    assign section_class = 'hero-section'
    assign heading = section.settings.heading | default: 'New Arrivals'
    assign bg_img = section.settings.background_image
    assign cta_url = section.settings.cta_url
    assign cta = section.settings.call_to_action | default: 'See variants'
  -%}
  
  <style>
    a.cta-text {
        font-family: "Quattrocento Sans", serif;
    }

  </style>

  <div id="{{ section_id }}" class="{{ section_class }} relative h-[calc(100vh-8rem)] flex flex-col items-center justify-center">

    <div class="absolute bg-[#252827] w-full h-full z-2 opacity-25">&nbsp;</div>

    <div class="absolute inset-0 brightness-70 z-1">
    <img src="{{ bg_img | image_url: width: 10000, height: 10000 }}" alt="Hero Section Background" loading="eager" width="10000" height="10000" class="w-full h-full object-cover">
    </div> 
  
    <div class="relative z-2 text-center">
    <h1 class="!text-[#FBFDFE]">{{ heading }}</h1>
    <a class="cta-text text-[#FBFDFE] underline uppercase max-md:text-[14px]" href="{{ cta_url }}">{{ cta }}</a>
    </div>
  
  </div>
  
  
  {% schema %}
  {
    "name": "Hero Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "New Arrivals"
      },
      {
        "type": "text",
        "id": "call_to_action",
        "label": "Call To Action",
        "default": "See Variants"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA URL"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      }
    ],
    "presets": [
      {
        "name": "Hero Section"
      }
    ]
  }
  {% endschema %}